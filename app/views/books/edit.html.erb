</body>

<%= form_with model: @book,url: update_book_path(@book.id), method: :patch do |f| %>
      <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2 class="main-error"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
         <ul>
         <% @book.errors.full_messages.each do |msg| %>
            <td><li class="main-error"><%= msg %></li></td>
         <% end %>
         </ul>
      </div>
<% end %>
<div id="edit-title">
<label for="book_title">Title</label>
<%= f.text_field :title %>

</div>
<div id="edit-title">
<label for="book_body">Body</label>
<%= f.text_area :body %>


</div>
<div class="actions">
<%= f.submit "Update Book" %>
<% end %>
</div>

<div class="edit-list">
  <%= link_to "Show",book_path(@book.id) %>
  |
  <%= link_to "Back",'/books' %>
</div>
