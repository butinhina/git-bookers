<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
<% end %>
    <div id="main-title">
    <h1>Books</h1>
    </div>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr class="tr-title2">
         <td class="td-title"><span><%= book.title %></span></td>
         <td class="td-title"><span></span><%= book.body %></span></td>
          <td><%= link_to 'Show',book_path(book.id) %></td>
          <td><%= link_to 'Edit',edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy',destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <div class="main-logo">
     <h2>NEW book</h2>
    </div>

    <%= form_with model: @book, url: '/books', method: :post do |f| %>
      <% if @book.errors.any? %>
        <h2 class="main-error"><%= @book.errors.count %>個のerrorsがあります<br></h2
         <% @book.errors.full_messages.each do |msg| %>
            <li class="main-error2"><%= msg %><br/></li>
         <% end %>
    <% end %>

    <div class="main-list">
       <h4>Title</h4l>
       <%=f.text_field :title %>
    </div>

    <div class="main-list">
       <h4>Body</h4>
       <%=f.text_area :body %>
    </div>

    <div class="actions">
      <%=f.submit 'Create Book' %>
      <% end %>
    </div>